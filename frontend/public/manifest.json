{
  "short_name": "Doctorfy",
  "name": "Doctorfy - Plataforma de Salud con IA",
  "id": "com.doctorfy.app",
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "logo192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any"
    },
    {
      "src": "logo512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any"
    },
    {
      "src": "maskable_icon.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "maskable"
    }
  ],
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "minimal-ui"],
  "orientation": "portrait",
  "theme_color": "#2196f3",
  "background_color": "#ffffff",
  "description": "Consultas médicas y psicológicas ilimitadas con IA. Análisis de estudios médicos en segundos.",
  "categories": ["health", "medical", "ai", "wellness"],
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "screenshots": [
    {
      "src": "screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "screenshot2.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "widgets_path": "/widgets.json",
  "protocol_handlers": [
    {
      "protocol": "web+doctorfy",
      "url": "/protocol?type=%s"
    },
    {
      "protocol": "mailto",
      "url": "/compose?to=%s"
    }
  ],
  "shortcuts": [
    {
      "name": "Chat Médico",
      "short_name": "Chat",
      "description": "Inicia una consulta con nuestro asistente médico",
      "url": "/medical-chat",
      "icons": [{ "src": "/icons/chat.png", "sizes": "192x192" }]
    },
    {
      "name": "Subir Estudio",
      "short_name": "Estudio",
      "description": "Sube un estudio médico para análisis",
      "url": "/medical-studies",
      "icons": [{ "src": "/icons/upload.png", "sizes": "192x192" }]
    },
    {
      "name": "Mi Perfil",
      "short_name": "Perfil",
      "description": "Ver y editar tu perfil",
      "url": "/profile",
      "icons": [{ "src": "/icons/profile.png", "sizes": "192x192" }]
    }
  ],
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".png", ".jpg", ".jpeg"]
      }
    },
    {
      "action": "/medical-studies",
      "accept": {
        "application/dicom": [".dcm"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "medicalFiles",
          "accept": ["image/*", "application/pdf", ".dcm"]
        }
      ]
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": {
    "enabled": true
  }
} 